<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFF">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#313131">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#313131">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/searchEditText" android:textColor="#FFFFFF" android:textColorLink="#FFFFFF"
                    android:textColorHint="#FFFFFF" android:textColorHighlight="#FFFFFF"
                    android:textCursorDrawable="@color/colorAccent"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/searchButton" android:layout_weight="1"/>
                <Button
                        android:text="random"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/randomButton" android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp" app:srcCompat="@drawable/default_chuck"
                    android:id="@+id/factImageView"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/factTextView" android:textColor="#FFFFFF"
                    android:textSize="24sp" android:textStyle="bold" android:background="#313131"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>